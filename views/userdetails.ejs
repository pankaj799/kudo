<!doctype html>
<html lang="en">

<head>
  <title>kudo</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <!--     Fonts and icons     -->
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
  <!-- Material Kit CSS -->
  <link href="/public/css/material-dashboard.css?v=2.1.2" rel="stylesheet" />
</head>

<body>
  <div class="wrapper ">
    <div class="sidebar" data-color="purple" data-background-color="white">
      <!--
      Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

      Tip 2: you can also add an image using data-image tag
  -->
      <div class="logo">
        <h4 class="simple-text logo-mini">KUDO</h4>
      </div>
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li>
            <a class="nav-link" href="/adminpanel">
              <i class="material-icons">dashboard</i>
              <p>Responder Messages</p>
            </a>
        </li>
        <li class="nav-item active  ">
            <a class="nav-link" href="/allusers">
                <i class="material-icons">dashboard</i>
                <p>Users Details</p>
              </a>
        </li>
          <li>
            <a class="nav-link" href="/allsubscriptions">
                <i class="material-icons">dashboard</i>
                <p>Subscription Plans</p>
              </a>
          </li>
          <!-- your sidebar here -->
        </ul>
      </div>
    </div>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="w-100 p-3">
          <div class="d-flex justify-content-between">
            <a class="navbar-brand" href="javascript:;">User Details</a>
            
              <form action="/logout" method="POST">
                <button type="submit" class="btn btn-info btn-lg">
                  <span class="glyphicon glyphicon-log-out"></span> Log out
                </button>
              </form>
            
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
          </button>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <div>
            <a href="/getadduser" class="btn btn-primary">Add User</a>
            <!-- <a href="/editpost" class="btn btn-primary">Mange Posts</a> -->
          </div>
          <div>
            <h3>Edit User Details</h1>
          </div>
          <div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">S.No.</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Number</th>
                  <th scope="col">Login With</th>
                  <!-- <th scope="col">Time</th>
                  <th scope="col">Keyword</th>
                  <th scope="col">map</th> -->
                  <th scope="col"></th>
                </tr>
              
            <% for(var i=0; i < data.length; i++) { %>
                <tbody>
                  <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><h6><%= data[i].name %></h6></td>
                    <!-- <td><img src="<%= data[i].image %>" alt="image" class="img-fluid"></td> -->
                    <td><p><%= data[i].email %></p></td>
                    <td><h6 class="text-lowercase"><%= data[i].phone %></h6></td>
                    <td><h6><%= data[i].loginwith %></h6></td>
                    <td><div>
                      <form action="/getedituser" method="POST">
                        <!-- <input type="hidden" value="<%= data[i].createdby %>" name="createdby"> -->
                        <input type="hidden" value="<%= data[i]._id %>" name="id">
                        <button type="submit" class="btn btn-primary">Edit</button>
                      </form>
                      <form action="/deleteuser"  method="POST">
                        <input type="hidden" value="<%= data[i]._id %>" name="userid">
                        <button type="submit" class="btn btn-primary">delete</button>
                      </form>
                    </div></td>
                  </tr>
                </tbody>
           <% } %>
          </thead>
        </table>
            
          </div>
        </div>
      </div>
      <footer class="footer">
        
          
          <!-- your footer here -->
        </div>
      </footer>
    </div>
  </div>
</body>

</html>